  scale_fill_manual(values= c("red2","royalblue4")) + 
  ggtitle("TS - Reactome pathways")+ facet_grid(~Label) + 
  theme(plot.title.position= "plot") + xlab("-log(FDR)") + 
  ylab("Pathways") + theme_light() 

thecomp1$Label <- "ASD"
